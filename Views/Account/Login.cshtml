@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="row ">
    <div class="col-sm-2 col-md-3 col-lg-4"></div>
    <div class="col-sm-8 col-md-6 col-lg-4">
        <h2>@ViewData["Title"].</h2>
        <hr/>
        <form asp-controller="Account" asp-action="Login" method="post">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
            <div class="alert alert-danger alert-dismissable fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <div asp-validation-summary="All"></div>
            </div>
            }
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input asp-for="Email" type="text" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" name="password"/>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary col-xs-6">Log in</button>
                <a asp-action="Register" class="btn btn-default col-xs-6" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
            </div>

        </form>

    </div>
    <div class=" col-sm-2 col-md-3 col-lg-4"></div>

</div>





@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}
